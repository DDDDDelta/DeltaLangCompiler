#ifndef BUILTIN_TYPE
#define BUILTIN_TYPE(ID, NAME, SIZE)
#endif

#ifndef SIGNED_TYPE
#define SIGNED_TYPE(ID, NAME, SIZE) BUILTIN_TYPE(ID, NAME, SIZE)
#endif

#ifndef UNSIGNED_TYPE
#define UNSIGNED_TYPE(ID, NAME, SIZE) BUILTIN_TYPE(ID, NAME, SIZE)
#endif

BUILTIN_TYPE(Void, void, 0)

SIGNED_TYPE(Bool, bool, 1) // bool is represented by i1 in llvm which is signed
SIGNED_TYPE(I8, i8, 1)
SIGNED_TYPE(I16, i16, 2)
SIGNED_TYPE(I32, i32, 4)
SIGNED_TYPE(I64, i64, 8)

UNSIGNED_TYPE(U8, u8, 1)
UNSIGNED_TYPE(U16, u16, 2)
UNSIGNED_TYPE(U32, u32, 4)
UNSIGNED_TYPE(U64, u64, 8)

BUILTIN_TYPE(F32, f32, 4)
BUILTIN_TYPE(F64, f64, 8)

#undef BUILTIN_TYPE
#undef SIGNED_TYPE
#undef UNSIGNED_TYPE